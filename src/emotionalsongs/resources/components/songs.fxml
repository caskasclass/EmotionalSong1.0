<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="songPane" stylesheets="@../css/repositoryCanzoni.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="emotionalsongs.java.controllers.componentscontroller.songRepositoryController">
   <center>
      <HBox alignment="TOP_CENTER">
         <children>
            <TableView fx:id="repository" nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="NEVER">
              <columns>
                  <TableColumn fx:id="songindex" maxWidth="35.0" minWidth="35.0" prefWidth="35.0" resizable="false" text="#" />
                <TableColumn fx:id="titolo" maxWidth="-1.0" minWidth="125.0" prefWidth="125.0" resizable="false" text="TITOLO" />
                  <TableColumn fx:id="autore" maxWidth="-1.0" minWidth="125.0" prefWidth="125.0" resizable="false" text="AUTORE" />
                  <TableColumn fx:id="album" maxWidth="-1.0" minWidth="125.0" prefWidth="125.0" resizable="false" text="ALBUm" />
                  <TableColumn fx:id="anno" maxWidth="-1.0" minWidth="125.0" prefWidth="125.0" resizable="false" text="ANNO" />
                  <TableColumn fx:id="durata" maxWidth="-1.0" minWidth="100.0" prefWidth="100.0" resizable="false" text="DURATA" />
                  <TableColumn fx:id="optionbutton" maxWidth="100.0" minWidth="60.0" prefWidth="60.0" resizable="false" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TableView>
         </children>
      </HBox>
   </center>
   <top>
      <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Search" />
            <TextField fx:id="cercaCanzone" prefHeight="25.0" prefWidth="254.0" promptText="Inserisci titolo o autore e anno della canzone" />
            <Button mnemonicParsing="false" onAction="#InserisciEmozioniBrano" text="Aggiungi Emozioni" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="25.0" left="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
