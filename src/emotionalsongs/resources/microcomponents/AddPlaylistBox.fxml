   <center>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox spacing="10.0">
               <children>
                  <Pane maxHeight="200.0" maxWidth="180.0" minHeight="100.0" minWidth="100.0">
                     <children>
                        <ImageView fitHeight="180.0" fitWidth="180.0" pickOnBounds="true">
                           <image>
                              <Image url="@../images/edit.png" />
                           </image>
                        </ImageView>
                     </children>
                  </Pane>
                  <Label text="Aggiungi Playlist" textFill="WHITE">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </GridPane>
   </center>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
